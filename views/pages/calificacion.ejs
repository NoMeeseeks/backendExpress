<div class="container py-4">
    <div class="row">
        <!-- Formulario -->
        <div class="col-md-4">
            <div class="card shadow-lg border-primary">
                <div class="card-body">
                    <h2 class="mb-4 text-center text-primary">Buscar por Calificación</h2>
                    <form action="/fotos/calificacion" method="GET">
                        <div class="mb-3">
                            <label for="lower" class="form-label fw-bold">Valor Mínimo:</label>
                            <input type="number" class="form-control border-primary" id="lower" name="lower" step="any" placeholder="Ejemplo: 0" required>
                        </div>
                        <div class="mb-3">
                            <label for="higher" class="form-label fw-bold">Valor Máximo:</label>
                            <input type="number" class="form-control border-primary" id="higher" name="higher" step="any" placeholder="Ejemplo: 1.2" required>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Filtrar</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tabla -->
        <div class="col-md-8">
            <h2 class="pb-3 text-center bg-primary text-light p-3 rounded"> <%= title %> </h2>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover table-primary shadow-lg rounded-3">
                    <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Descripción</th>
                        <th>Ruta</th>
                        <th>Fecha de Creación</th>
                        <th class="text-center">Calificación</th>
                        <th>Etiqueta</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% arrFotos.forEach((foto) => { %>
                        <tr>
                            <td><strong><%= foto.id %></strong></td>
                            <td class="text-primary"><%= foto.titulo %></td>
                            <td><%= foto.descripcion %></td>
                            <td>
                                <a href="<%= foto.ruta %>" class="btn btn-outline-info btn-sm" target="_blank">Ver</a>
                            </td>
                            <td><%= foto.createdAt.toLocaleDateString('es-ES') %></td>
                            <td class="text-center">
                                <span class="badge bg-warning text-dark"><%= foto.calificacion %></span>
                            </td>
                            <td>
                                <span class="badge bg-success"><%= foto.etiqueta.map(instancia => instancia.texto).join(", ") %></span>
                            </td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
